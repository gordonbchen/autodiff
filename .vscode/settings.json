{
    "[python]": {
        "editor.defaultFoldingRangeProvider": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },

    "flake8.args": [
        "--max-line-length=88",
        "--extend-ignore=E203"
    ],
    
    "python.testing.pytestArgs": [
        ".",
        "-v",
        "-s"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
